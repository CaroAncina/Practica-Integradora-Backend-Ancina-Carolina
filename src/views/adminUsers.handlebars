<h1>Gesti√≥n de Usuarios</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Rol</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td>{{this.first_name}} {{this.last_name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.role}}</td>
        <td>
          <button onclick="changeUserRole('{{this._id}}')">Cambiar Rol</button>
          <button onclick="deleteUser('{{this._id}}')">Eliminar</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src="/js/adminUsers.js"></script>