<div>
  <h1>Detalles del carrito</h1>
  {{#if cart.products.length}}
    <ul>
      {{#each cart.products}}
        <li>
          <p>Producto: {{this.product.title}}</p>
          <p>Precio: ${{this.product.price}}</p>
          <input
            type="number"
            id="quantity-{{this.product._id}}"
            value="{{this.quantity}}"
            style="width: 50px; height: auto"
            ;
            min="1"
          />
          <button
            onclick="updateProductQuantity('{{cart._id}}', '{{this.product._id}}')"
          > Agregar </button>

          <button
            onclick="removeProductFromCart('{{cart._id}}', '{{this.product._id}}')"
          > Eliminar </button>
        </li>
      {{/each}}
    </ul>
    <button id="purchaseButton" onclick="purchaseCart()">Realizar compra</button>

    <button onclick="clearCart('{{cart._id}}')">Vaciar carrito</button>
  {{else}}
    <p>No hay productos en este carrito.</p>
  {{/if}}

  <input type="hidden" id="cartId" value="{{cart._id}}" />

  <button onclick="location.href='/products'">Volver a productos</button>
</div>

<script src="/js/carts.js"></script>
<script src="/js/products.js"></script>